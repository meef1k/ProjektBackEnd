@model Truck

@{
    ViewData["Title"] = "Add truck";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Truck</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="truck_number"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="truck_number" class="form-control" />
                        <span asp-validation-for="truck_number" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="truck_manufacturer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="truck_manufacturer" class="form-control" />
                        <span asp-validation-for="truck_manufacturer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="truck_model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="truck_model" class="form-control" />
                        <span asp-validation-for="truck_model" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="truck_plate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="truck_plate" class="form-control" />
                        <span asp-validation-for="truck_plate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                Return
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}