@model IEnumerable<Truck>

@{
    ViewData["Title"] = "Trucks";
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Trucks list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Truck" asp-action="Create" class="btn btn-primary">
                Add new truck
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-brodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.truck_number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.truck_manufacturer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.truck_model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.truck_plate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.truck_number</td>
                    <td width="25%">@obj.truck_manufacturer</td>
                    <td width="25%">@obj.truck_model</td>
                    <td width="15%">@obj.truck_plate</td>
                    <td class="text-center">
                        <div class="w-75 vtn-group" role="group">
                            <a asp-controller="Truck" asp-route-Id="@obj.id_truck" asp-action="Edit" class="btn btn-success">
                                Edit
                            </a>
                            <a asp-controller="Truck" asp-route-Id="@obj.id_truck" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no trucks in database</p>
    }
</div>