@model Trailer

@{
    ViewData["Title"] = "Delete trailer";
}

<form method="post" asp-action="Delete">
    <input asp-for="id_trailer" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Trailer</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="trailer_number"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="trailer_number" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="trailer_manufacturer"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="trailer_manufacturer" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="trailer_model"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="trailer_model" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="trailer_plate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="trailer_plate" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                Return
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}