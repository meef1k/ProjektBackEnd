@model Spedition.Models.Speditions

@{
    ViewData["Title"] = "Details";
}

<div class="border p-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h2 class="text-info pl-3">Spedition details</h2>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            Start place
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.start_place)
        </dd>
        <dt class = "col-sm-2">
            End place
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.end_place)
        </dd>
        <dt class = "col-sm-2">
            Truck manufacturer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truck.truck_manufacturer)
        </dd>
        <dt class = "col-sm-2">
            Truck model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truck.truck_model)
        </dd>
        <dt class = "col-sm-2">
            Truck number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truck.truck_number)
        </dd>
        <dt class = "col-sm-2">
            Truck number plate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Truck.truck_plate)
        </dd>
        <dt class = "col-sm-2">
            Trailer manufacturer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trailer.trailer_manufacturer)
        </dd>
        <dt class = "col-sm-2">
            Trailer model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trailer.trailer_model)
        </dd>
        <dt class = "col-sm-2">
            Trailer number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trailer.trailer_number)
        </dd>
        <dt class = "col-sm-2">
            Trailer number plate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trailer.trailer_plate)
        </dd>
        <dt class = "col-sm-2">
            Driver number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Driver.driver_number)
        </dd>
        <dt class = "col-sm-2">
            Driver name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Driver.driver_name)
        </dd>
    </dl>
        <input type="hidden" asp-for="id_spedition" />
        <div class="col-8 offset-4 row">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <div class="col">
                    <a asp-action="Edit" asp-route-id="@Model.id_spedition" class="btn btn-primary w-100">Edit</a>
                </div>
            }
            <div class="col">
                <a asp-action="Index" class="btn btn-info w-100">
                    Return
                </a>
            </div>
        </div>
</div>
