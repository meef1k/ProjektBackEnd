@model IEnumerable<Speditions>

@{
    ViewData["Title"] = "Speditions";
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Speditors list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Speditors" asp-action="Create" class="btn btn-primary">
                Add new spedition
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-brodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Truck
                    </th>
                    <th>
                        Trailer
                    </th>
                    <th>
                        Start place
                    </th>
                    <th>
                        End place
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.DriverId</td>
                    <td width="15%">@obj.DriverId</td>
                    <td width="10%">@obj.TruckId</td>
                    <td width="10%">@obj.TrailerId</td>
                    <td width="10%">@obj.start_place</td>
                    <td width="10%">@obj.end_place</td>
                    <td class="text-center">
                        <div class="w-75 vtn-group" role="group">
                            <a asp-controller="Speditors" asp-route-Id="@obj.id_spedition" asp-action="Edit" class="btn btn-success">
                                Edit
                            </a>
                            <a asp-controller="Speditors" asp-route-Id="@obj.id_spedition" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no speditions in database</p>
    }
</div>